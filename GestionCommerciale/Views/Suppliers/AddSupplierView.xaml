<UserControl x:Class="GestionCommerciale.Views.Suppliers.AddSupplierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="757"
             d:DesignWidth="900"
             mc:Ignorable="d">
    <Grid Name="LayoutRoot">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform />
                <TranslateTransform />
            </TransformGroup>
        </Grid.RenderTransform>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <dxlc:GroupBox Name="GeneraleInfosGroupBox"
                           Grid.ColumnSpan="2"
                           Width="Auto"
                           Height="Auto"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           FontSize="14"
                           FontStyle="Italic"
                           GotKeyboardFocus="GroupBox_GotKeyboardFocus"
                           Header="       Information générale"
                           LostKeyboardFocus="GroupBox_LostKeyboardFocus"
                           MaximizeElementVisibility="Collapsed"
                           MinimizeElementVisibility="Visible"
                           TitleVisibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <dx:GroupFrame>
                        <dx:GroupFrame.Header>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Image Name="image1"
                                       Width="32"
                                       Height="32"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Opacity="0.7"
                                       Source="/GestionCommerciale;component/Images/Business_menu/fournisseurs.png"
                                       Stretch="Fill" />
                                <Label VerticalContentAlignment="Center" Content="Information générale" />
                            </StackPanel>
                        </dx:GroupFrame.Header>

                        <Grid Name="grid1"
                              Grid.Column="0"
                              Focusable="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="125" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="125" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <dxe:ImageEdit Name="imageEdit1"
                                           Grid.RowSpan="4"
                                           Width="125"
                                           Height="120"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Top" />
                            <Label Name="label1"
                                   Grid.Column="1"
                                   VerticalContentAlignment="Center"
                                   Content="Société :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="CompanyTxtBox"
                                          Grid.Column="2"
                                          Grid.ColumnSpan="3"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="0" />
                            <Label Name="label2"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   VerticalContentAlignment="Center"
                                   Content="Fonction Contact :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="TitleContactTxtBox"
                                          Grid.Row="1"
                                          Grid.Column="2"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="1" />
                            <Label Name="label3"
                                   Grid.Row="1"
                                   Grid.Column="3"
                                   VerticalContentAlignment="Center"
                                   Content="Nom Contact :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="NameContactTxtBox"
                                          Grid.Row="1"
                                          Grid.Column="4"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="2" />
                        </Grid>
                    </dx:GroupFrame>
                    <dx:GroupFrame Grid.Column="1" Width="300">
                        <dx:GroupFrame.Header>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Image Name="image45"
                                       Width="32"
                                       Height="32"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Opacity="0.7"
                                       Source="/GestionCommerciale;component/Images/Business_menu/book.png"
                                       Stretch="Fill" />
                                <Label VerticalContentAlignment="Center" Content="Informations commérciale" />
                            </StackPanel>
                        </dx:GroupFrame.Header>
                        <Grid Name="grid4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                            </Grid.RowDefinitions>
                            <Label Name="label15"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="RC :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="RcTxtBox"
                                          Grid.Row="0"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="3" />
                            <Label Name="label9"
                                   Grid.Row="1"
                                   Grid.RowSpan="1"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="NIS :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="NisTxtBox"
                                          Grid.Row="1"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="4" />
                            <Label Name="label16"
                                   Grid.Row="2"
                                   VerticalContentAlignment="Center"
                                   Content="MF :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="NsTxtBox"
                                          Grid.Row="2"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="5" />
                            <Label Name="label14"
                                   Grid.Row="3"
                                   VerticalContentAlignment="Center"
                                   Content="AI :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="AiTxtBox"
                                          Grid.Row="3"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="6" />
                        </Grid>
                    </dx:GroupFrame>
                </Grid>

            </dxlc:GroupBox>
            <dxlc:GroupBox Name="AdresseGroupBox"
                           Grid.Row="1"
                           Grid.ColumnSpan="2"
                           Width="Auto"
                           Height="Auto"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Top"
                           FontSize="14"
                           FontStyle="Italic"
                           GotKeyboardFocus="GroupBox_GotKeyboardFocus"
                           Header="      Adresse"
                           LostKeyboardFocus="GroupBox_LostKeyboardFocus"
                           MaximizeElementVisibility="Collapsed"
                           MinimizeElementVisibility="Visible"
                           TitleVisibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <dx:GroupFrame>
                        <dx:GroupFrame.Header>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                <Image Name="image236"
                                       Width="32"
                                       Height="32"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Opacity="0.7"
                                       Source="/GestionCommerciale;component/Images/Business_menu/adresse.png"
                                       Stretch="Fill" />
                                <Label VerticalContentAlignment="Center" Content="Adresse" />
                            </StackPanel>
                        </dx:GroupFrame.Header>
                        <Grid Name="grid2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                            </Grid.RowDefinitions>
                            <Label Name="label4"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="Adresse :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="AdresseTxtBox"
                                          Grid.Column="1"
                                          Grid.ColumnSpan="3"
                                          Height="34"
                                          VerticalAlignment="Center"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="7" />
                            <Label Name="label5"
                                   Grid.Row="1"
                                   Grid.RowSpan="1"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="Pays :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="CountryTxtBox"
                                          Grid.Row="1"
                                          Grid.Column="1"
                                          Height="34"
                                          VerticalAlignment="Center"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="8" />
                            <Label Name="label6"
                                   Grid.Row="1"
                                   Grid.Column="2"
                                   VerticalContentAlignment="Center"
                                   Content="Région :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="RegionTxtBox"
                                          Grid.Row="1"
                                          Grid.Column="3"
                                          Height="34"
                                          Margin="0"
                                          VerticalAlignment="Center"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="9" />
                            <Label Name="label7"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="Ville :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="CityTxtBox"
                                          Grid.Row="2"
                                          Grid.Column="1"
                                          Height="34"
                                          VerticalAlignment="Center"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="10" />
                            <Label Name="label8"
                                   Grid.Row="2"
                                   Grid.Column="2"
                                   VerticalContentAlignment="Center"
                                   Content="Code postal :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="ZipCodeTxtBox"
                                          Grid.Row="2"
                                          Grid.Column="3"
                                          Height="34"
                                          VerticalAlignment="Center"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="11" />
                        </Grid>
                    </dx:GroupFrame>
                    <dx:GroupFrame Name="ContactsGroupBox"
                                   Grid.Column="1"
                                   Width="300"
                                   Margin="0"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Top"
                                   FontSize="14"
                                   FontStyle="Italic">
                        <dx:GroupFrame.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Name="image3"
                                       Width="32"
                                       Height="32"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       Opacity="0.7"
                                       Source="/GestionCommerciale;component/Images/Business_menu/fax.png"
                                       Stretch="Fill" />
                                <Label VerticalContentAlignment="Center" Content="Contacts" />
                            </StackPanel>
                        </dx:GroupFrame.Header>

                        <Grid Name="grid3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                                <RowDefinition Height="35" />
                            </Grid.RowDefinitions>
                            <Label Name="label12"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="Téléphone :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="TelephonTxtBox"
                                          Grid.Row="0"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="12" />
                            <Label Name="label10"
                                   Grid.Row="1"
                                   Grid.RowSpan="1"
                                   Grid.Column="0"
                                   VerticalContentAlignment="Center"
                                   Content="Site web :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="WebSiteTxtBox"
                                          Grid.Row="1"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="13" />
                            <Label Name="label13"
                                   Grid.Row="2"
                                   VerticalContentAlignment="Center"
                                   Content="Fax :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="FaxTxtBox"
                                          Grid.Row="2"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="14" />
                            <Label Name="label11"
                                   Grid.Row="3"
                                   VerticalContentAlignment="Center"
                                   Content="Email :"
                                   FontSize="12"
                                   FontStyle="Normal"
                                   FontWeight="Bold" />
                            <dxe:TextEdit Name="EmailTxtBox"
                                          Grid.Row="3"
                                          Grid.Column="1"
                                          Height="33"
                                          FontSize="14"
                                          FontStyle="Normal"
                                          TabIndex="15" />
                        </Grid>
                    </dx:GroupFrame>
                </Grid>
            </dxlc:GroupBox>

            <Button Name="AddTheSupplierBtn"
                    Grid.Row="4"
                    Width="230"
                    Height="50"
                    Margin="0,10,10,70"
                    HorizontalAlignment="Right"
                    Click="AddTheSupplierBtn_Click"
                    FontSize="16"
                    FontStyle="Normal"
                    FontWeight="Bold"
                    TabIndex="16">
                <StackPanel Orientation="Horizontal">
                    <Image Width="32"
                           Height="32"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           Source="/GestionCommerciale;component/Images/Icons/32/save.png"
                           Stretch="Fill" />
                    <Label Content="Ajouter le fournisseur" />
                </StackPanel>
            </Button>

        </Grid>

    </Grid>
</UserControl>